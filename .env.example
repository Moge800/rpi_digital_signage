# signage settings
REFRESH_INTERVAL=10.0
LINE_NAME=LINE_1  # ライン名 (config/production_types/{LINE_NAME}.jsonと対応)
THEME=dark  # UIテーマ (dark: ダークモード, light: ライトモード)
KIOSK_MODE=true  # Kioskモード (true: 全画面表示, false: 通常ブラウザ)


# backend settings
PLC_IP=192.168.0.10
PLC_PORT=5000
AUTO_RECONNECT=true
RECONNECT_RETRY=3
RECONNECT_DELAY=2.0
DEBUG_DUMMY_READ=false
USE_PLC=true

# PLC device settings (実機環境に合わせてデバイスアドレスを設定してください)
TIME_DEVICE="D210"             # 時刻格納デバイス (BCD形式YMDhms、6ワード)
PRODUCTION_TYPE_DEVICE="D100"  # 機種番号格納デバイス (0-15の整数)
PLAN_DEVICE="D101"             # 計画生産数格納デバイス
ACTUAL_DEVICE="D102"           # 実績生産数格納デバイス
ALARM_FLAG_DEVICE="D103"       # アラームフラグ格納デバイス (0: 正常, 1: アラーム)
ALARM_MSG_DEVICE="D104"        # アラームメッセージ格納デバイス (文字列)
IN_OPERATING_DEVICE="D105"     # 稼働中フラグ格納デバイス (0: 停止, 1: 稼働中)

